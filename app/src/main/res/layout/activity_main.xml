<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maccesarr.maps.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chichen Itza"
                android:layout_weight="1"
                android:onClick="seleccionarPlace1"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coloradas"
                android:layout_weight="1"
                android:onClick="seleccionarPlace2"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingRight="5dp"/>
        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView_place1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/chichen_itza"
              android:layout_weight="1"
              android:onClick="seleccionarPlace1"/>

          <ImageView
              android:id="@+id/imageView_place2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/coloradas"
              android:layout_weight="1"
              android:onClick="seleccionarPlace2"/>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/imageView_place3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cenote"
                android:layout_weight="1"
                android:onClick="seleccionarPlace3"/>

            <ImageView
                android:id="@+id/imageView_place4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/uxmal"
                android:layout_weight="1"
                android:onClick="seleccionarPlace4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuzama"
                android:layout_weight="1"
                android:onClick="seleccionarPlace1"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uxmal"
                android:layout_weight="1"
                android:onClick="seleccionarPlace2"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingRight="5dp"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
